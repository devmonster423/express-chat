{
  "name": "Mondedie-chat",
  "description": "Node.js chat application for mondedie.fr forum using Express, Socket.io, Redis and Mithril",
  "repository": "https://github.com/mondediefr/mondedie-chat",
  "env": {
    "FORUM_API_ENDPOINT": {
      "description": "Flarum API endpoint",
      "value": "http://mondedie.fr/api/"
    },
    "APP_URL": {
      "description": "App URL",
      "value": "http://my-chat-app.herokuapp.com"
    },
    "COOKIES_SECRET": {
      "description": "Cookies secret key",
      "generator": "secret"
    },
    "SESSION_SECRET": {
      "description": "Sessions secret key",
      "generator": "secret"
    },
    "GULP_TASK": {
      "description": "Gulp build task",
      "value": "default"
    },
    "ENV": {
      "description": "Online environment",
      "value": "production"
    }
  },
  "addons": [
    "heroku-redis",
    "logentries"
  ],
  "buildpacks": [{
    "url": "https://github.com/robgraeber/heroku-buildpack-nodejs-bower-gulp"
  }]
}